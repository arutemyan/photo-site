<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         cacheDirectory=".phpunit.cache"
         failOnWarning="false"
         failOnRisky="true"
         beStrictAboutOutputDuringTests="true"
         displayDetailsOnTestsThatTriggerWarnings="true">

    <testsuites>
        <testsuite name="All Tests">
            <directory>tests</directory>
        </testsuite>
        <testsuite name="Api">
            <directory>tests/Api</directory>
        </testsuite>
        <testsuite name="Cache">
            <directory>tests/Cache</directory>
        </testsuite>
        <testsuite name="Security">
            <directory>tests/Security</directory>
        </testsuite>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
    </testsuites>

    <php>
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="-1"/>
        <ini name="memory_limit" value="512M"/>
    </php>

    <!-- Coverage disabled in default CI/local runs to avoid requiring Xdebug/PCOV on every environment.
         Enable coverage in developer environments or in a separate workflow that installs Xdebug. -->

    <logging>
        <testdoxHtml outputFile="tests/reports/testdox.html"/>
        <testdoxText outputFile="tests/reports/testdox.txt"/>
        <junit outputFile="tests/reports/junit.xml"/>
    </logging>

    <source>
        <include>
            <directory suffix=".php">public/api</directory>
            <directory suffix=".php">public/admin/api</directory>
            <directory suffix=".php">public/config</directory>
        </include>
        <exclude>
            <directory>vendor</directory>
            <directory>tests</directory>
        </exclude>
    </source>
</phpunit>
