order deny,allow
Require all granted

# Apache設定ファイル

# PHPのエラー表示設定
php_flag display_errors Off
php_flag log_errors On

# セキュリティヘッダー
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# URLリライト（Pretty URL）
<IfModule mod_rewrite.c>
    RewriteEngine On

    # HTTPSへリダイレクト（本番環境のみ、開発環境ではコメントアウト）
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # 管理画面へのアクセス
    # Note: admin ディレクトリ名を変更した場合は、以下も変更してください
    # 例: RewriteRule ^fehihfnFG__$ fehihfnFG__/index.php [L]
    RewriteRule ^admin$ admin/index.php [L]
    RewriteRule ^admin/login$ admin/login.php [L]

    # 公開API (Pretty URL)
    RewriteRule ^api/posts$ api/posts.php [L]
    RewriteRule ^api/post$ api/post.php [L]

    # 存在しないファイル/ディレクトリの場合、index.phpへ
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteRule ^(.*)$ index.php [L]
</IfModule>

# データベースファイルへのアクセスを禁止
<Files "*.db">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>

